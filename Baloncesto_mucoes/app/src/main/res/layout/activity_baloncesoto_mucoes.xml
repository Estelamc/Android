<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@drawable/cancha"
    >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:id="@+id/layout1"
        android:layout_weight="1"
        android:padding="20dp"
        android:orientation="vertical">

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="1"
            android:id="@+id/b1A"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:textSize="34dp" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="2"
            android:id="@+id/b2A"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:textSize="34dp" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="3"
            android:id="@+id/b3A"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:textSize="34dp" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="-"
            android:id="@+id/bRA"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:textSize="34dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:id="@+id/layout2"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:id="@+id/layout2-1"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:id="@+id/layout2-1A"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="LOCAL"
                    android:id="@+id/textoL"
                    android:layout_weight="0.6"
                    android:gravity="center"
                    android:textSize="20dp"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:id="@+id/textoA"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="#d0494949"
                    android:text="0"
                    android:textSize="70dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:id="@+id/layout2-1B"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="VISITANTE"
                    android:id="@+id/textoV"
                    android:layout_weight="0.6"
                    android:gravity="center"
                    android:textSize="20dp"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:id="@+id/textoB"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="#d0494949"
                    android:text="0"
                    android:textSize="70dp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/layout2-2"
            android:layout_weight="0.35"
            android:orientation="vertical"
            >

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_margin="7dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reset"
                android:id="@+id/bReset"
                android:layout_gravity="center"
                android:textSize="30dp" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:id="@+id/layout3"
        android:layout_weight="1"
        android:padding="20dp"
        android:orientation="vertical">

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="1"
            android:id="@+id/b1B"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:textSize="34dp" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="2"
            android:id="@+id/b2B"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:textSize="34dp" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="3"
            android:id="@+id/b3B"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:textSize="34dp" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="-"
            android:id="@+id/bRB"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:textSize="34dp" />
    </LinearLayout>

</LinearLayout>
