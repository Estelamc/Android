<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="40dp"
    android:background="@drawable/cancha"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layout1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:padding="6dp"
            android:layout_weight="1"
            android:background="#BF3962b9">

            <TextView
                android:id="@+id/lEquipo1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Equipo 1"
                android:textSize="35dp"
                android:textColor="#ffffff" />

            <EditText
                android:id="@+id/equipo1"
                android:inputType="text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="A"
                android:textSize="20dp"
                android:textAlignment="center"
                android:textColor="#222038" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:padding="6dp"
            android:layout_weight="1"
            android:background="#BF3962b9">

            <TextView
                android:id="@+id/lEquipo2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Equipo 2"
                android:textSize="35dp"
                android:textColor="#ffffff" />

            <EditText
                android:id="@+id/equipo2"
                android:inputType="text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="B"
                android:textSize="20dp"
                android:textAlignment="center"
                android:textColor="#222038" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout3"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="1">

            <Button
                android:id="@+id/bEnviar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_gravity="bottom"
                android:text="Comenzar"
                android:onClick="onClick()"
                android:background="#222038"
                android:textColor="#ffffff"
                android:textSize="20dp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
