<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="vertical"
    tools:context="mucoes.micalculadora.MainActivity">

    <TextView
        android:id="@+id/texto"
        android:textAlignment="textEnd"
        android:layout_gravity="end"
        android:textSize="60sp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:text=""
        android:textColor="#3962b9" />

    <LinearLayout
        android:id="@+id/layoutBotones"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="1dp">

        <LinearLayout
            android:id="@+id/layoutBotones1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_margin="1dp">

            <Button
                android:id="@+id/botonC"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="C"
                android:layout_weight="2"
                android:textSize="34sp"
                android:textColor="#ffffff"
                android:background="#3962b9"
                android:layout_margin="2dp" />

            <Button
                android:id="@+id/botonSigno"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="+/-"
                android:layout_weight="2"
                android:textSize="34sp"
                android:textColor="#ffffff"
                android:background="#3962b9"
                android:layout_margin="2dp" />

            <Button
                android:id="@+id/botonDividir"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="/"
                android:layout_weight="0.1"
                android:textSize="34sp"
                android:textColor="#ffffff"
                android:background="#3962b9"
                android:layout_margin="2dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutBotones2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_margin="1dp">

            <Button
                android:id="@+id/boton7"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="7"
                android:layout_weight="1"
                android:textSize="34sp"
                android:textColor="#ffffff"
                android:background="#3962b9"
                android:layout_margin="2dp" />

            <Button
                android:id="@+id/boton8"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="8"
                android:layout_weight="1"
                android:textSize="34sp"
                android:textColor="#ffffff"
                android:background="#3962b9"
                android:layout_margin="2dp" />

            <Button
                android:id="@+id/boton9"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="9"
                android:layout_weight="1"
                android:textSize="34sp"
                android:textColor="#ffffff"
                android:background="#3962b9"
                android:layout_margin="2dp" />

            <Button
                android:id="@+id/botonMultiplicar"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="*"
                android:layout_weight="1"
                android:textSize="34sp"
                android:textColor="#ffffff"
                android:background="#3962b9"
                android:layout_margin="2dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutBotones3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_margin="1dp">

            <Button
                android:id="@+id/boton4"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="4"
                android:layout_weight="1"
                android:textSize="34sp"
                android:textColor="#ffffff"
                android:background="#3962b9"
                android:layout_margin="2dp" />

            <Button
                android:id="@+id/boton5"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="5"
                android:layout_weight="1"
                android:textSize="34sp"
                android:textColor="#ffffff"
                android:background="#3962b9"
                android:layout_margin="2dp" />

            <Button
                android:id="@+id/boton6"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="6"
                android:layout_weight="1"
                android:textSize="34sp"
                android:textColor="#ffffff"
                android:background="#3962b9"
                android:layout_margin="2dp" />

            <Button
                android:id="@+id/botonRestar"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="-"
                android:layout_weight="1"
                android:textSize="34sp"
                android:textColor="#ffffff"
                android:background="#3962b9"
                android:layout_margin="2dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutBotones4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_margin="1dp">

            <Button
                android:id="@+id/boton1"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="1"
                android:layout_weight="1"
                android:textSize="34sp"
                android:textColor="#ffffff"
                android:background="#3962b9"
                android:layout_margin="2dp" />

            <Button
                android:id="@+id/boton2"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="2"
                android:layout_weight="1"
                android:textSize="34sp"
                android:textColor="#ffffff"
                android:background="#3962b9"
                android:layout_margin="2dp" />

            <Button
                android:id="@+id/boton3"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="3"
                android:layout_weight="1"
                android:textSize="34sp"
                android:textColor="#ffffff"
                android:background="#3962b9"
                android:layout_margin="2dp" />

            <Button
                android:id="@+id/botonSumar"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="+"
                android:layout_weight="1"
                android:textSize="34sp"
                android:textColor="#ffffff"
                android:background="#3962b9"
                android:layout_margin="2dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutBotones5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_margin="1dp">

            <Button
                android:id="@+id/boton0"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="0"
                android:layout_weight="1"
                android:textSize="34sp"
                android:textColor="#ffffff"
                android:background="#3962b9"
                android:layout_margin="2dp" />

            <Button
                android:id="@+id/botonPunto"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="."
                android:layout_weight="1"
                android:textSize="34sp"
                android:textColor="#ffffff"
                android:background="#3962b9"
                android:layout_margin="2dp" />

            <Button
                android:id="@+id/botonIgual"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="="
                android:layout_weight="1"
                android:textSize="34sp"
                android:textColor="#ffffff"
                android:background="#3962b9"
                android:layout_margin="2dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
