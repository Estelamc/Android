<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="vertical"
    tools:context="mucoes.micalculadora.MainActivity">

    <TextView
        android:id="@+id/texto"
        android:textAlignment="textEnd"
        android:layout_gravity="end"
        android:textSize="40sp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:text=""
        android:textColor="#3962b9" />

    <LinearLayout
        android:id="@+id/layoutBotonesCompleto"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="1dp">

        <LinearLayout
            android:id="@+id/layoutBotonesNormales"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="1dp">

            <LinearLayout
                android:id="@+id/layoutBotones1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_margin="1dp">

                <Button
                    android:id="@+id/botonC"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="C"
                    android:layout_weight="2"
                    android:textSize="20sp"
                    android:textColor="#ffffff"
                    android:background="#3962b9"
                    android:layout_margin="2dp" />

                <Button
                    android:id="@+id/botonSigno"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="+/-"
                    android:layout_weight="2"
                    android:textSize="20sp"
                    android:textColor="#ffffff"
                    android:background="#3962b9"
                    android:layout_margin="2dp" />

                <Button
                    android:id="@+id/botonDividir"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="/"
                    android:layout_weight="0.1"
                    android:textSize="20sp"
                    android:textColor="#ffffff"
                    android:background="#3962b9"
                    android:layout_margin="2dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutBotones2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_margin="1dp">

                <Button
                    android:id="@+id/boton7"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="7"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:textColor="#ffffff"
                    android:background="#3962b9"
                    android:layout_margin="2dp" />

                <Button
                    android:id="@+id/boton8"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="8"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:textColor="#ffffff"
                    android:background="#3962b9"
                    android:layout_margin="2dp" />

                <Button
                    android:id="@+id/boton9"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="9"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:textColor="#ffffff"
                    android:background="#3962b9"
                    android:layout_margin="2dp" />

                <Button
                    android:id="@+id/botonMultiplicar"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="*"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:textColor="#ffffff"
                    android:background="#3962b9"
                    android:layout_margin="2dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutBotones3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_margin="1dp">

                <Button
                    android:id="@+id/boton4"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="4"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:textColor="#ffffff"
                    android:background="#3962b9"
                    android:layout_margin="2dp" />

                <Button
                    android:id="@+id/boton5"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="5"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:textColor="#ffffff"
                    android:background="#3962b9"
                    android:layout_margin="2dp" />

                <Button
                    android:id="@+id/boton6"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="6"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:textColor="#ffffff"
                    android:background="#3962b9"
                    android:layout_margin="2dp" />

                <Button
                    android:id="@+id/botonRestar"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="-"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:textColor="#ffffff"
                    android:background="#3962b9"
                    android:layout_margin="2dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutBotones4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_margin="1dp">

                <Button
                    android:id="@+id/boton1"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="1"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:textColor="#ffffff"
                    android:background="#3962b9"
                    android:layout_margin="2dp" />

                <Button
                    android:id="@+id/boton2"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="2"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:textColor="#ffffff"
                    android:background="#3962b9"
                    android:layout_margin="2dp" />

                <Button
                    android:id="@+id/boton3"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="3"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:textColor="#ffffff"
                    android:background="#3962b9"
                    android:layout_margin="2dp" />

                <Button
                    android:id="@+id/botonSumar"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="+"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:textColor="#ffffff"
                    android:background="#3962b9"
                    android:layout_margin="2dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutBotones5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_margin="1dp">

                <Button
                    android:id="@+id/boton0"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="0"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:textColor="#ffffff"
                    android:background="#3962b9"
                    android:layout_margin="2dp" />

                <Button
                    android:id="@+id/botonPunto"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="."
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:textColor="#ffffff"
                    android:background="#3962b9"
                    android:layout_margin="2dp" />

                <Button
                    android:id="@+id/botonIgual"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="="
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:textColor="#ffffff"
                    android:background="#3962b9"
                    android:layout_margin="2dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutBotonesCientifica"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="1dp">

            <LinearLayout
                android:id="@+id/layoutBotonesC1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_margin="1dp">

                <Button
                    android:id="@+id/botonSeno"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="sin"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:textColor="#ffffff"
                    android:background="#3962b9"
                    android:layout_margin="2dp" />

                <Button
                    android:id="@+id/botonCoseno"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="cos"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:textColor="#ffffff"
                    android:background="#3962b9"
                    android:layout_margin="2dp" />

                <Button
                    android:id="@+id/botonTangente"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="tan"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:textColor="#ffffff"
                    android:background="#3962b9"
                    android:layout_margin="2dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutBotonesC2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_margin="1dp">

                <Button
                    android:id="@+id/botonPi"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="PI"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:textColor="#ffffff"
                    android:background="#3962b9"
                    android:layout_margin="2dp" />

                <Button
                    android:id="@+id/botonRaiz"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="2v"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:textColor="#ffffff"
                    android:background="#3962b9"
                    android:layout_margin="2dp" />

                <Button
                    android:id="@+id/botonExponencia10"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="10x"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:textColor="#ffffff"
                    android:background="#3962b9"
                    android:layout_margin="2dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutBotonesC3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_margin="1dp">

                <Button
                    android:id="@+id/botonExponencia2"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="x2"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:textColor="#ffffff"
                    android:background="#3962b9"
                    android:layout_margin="2dp" />

                <Button
                    android:id="@+id/botonExponencia3"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="x3"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:textColor="#ffffff"
                    android:background="#3962b9"
                    android:layout_margin="2dp" />

                <Button
                    android:id="@+id/botonAleatorio"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="Rand"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:textColor="#ffffff"
                    android:background="#3962b9"
                    android:layout_margin="2dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutBotonesC4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_margin="1dp">

                <Button
                    android:id="@+id/botonSenoHiperbolico"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="sinh"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:textColor="#ffffff"
                    android:background="#3962b9"
                    android:layout_margin="2dp" />

                <Button
                    android:id="@+id/botonCosenoHiperbolico"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="cosh"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:textColor="#ffffff"
                    android:background="#3962b9"
                    android:layout_margin="2dp" />

                <Button
                    android:id="@+id/botonTangenteHiperbolica"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="tanh"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:textColor="#ffffff"
                    android:background="#3962b9"
                    android:layout_margin="2dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
